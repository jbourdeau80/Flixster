<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">
    <data>
        <variable name="movie" type="com.example.flixster.models.Movie"/>
    </data>

    <RelativeLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:transitionName="transition">

        <ImageView
            android:id="@+id/ivPoster1"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            app:imageUrl1='@{movie.backdropPath}'
            tools:srcCompat="@tools:sample/avatars" />
        <ImageView
            android:id="@+id/play_icon_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/play_icon1"
            tools:srcCompat="@drawable/play_icon1"

            />

    </RelativeLayout>
</layout>

